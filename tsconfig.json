{
    "compilerOptions": {
        "strict": true,
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "Node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client", "node", "express"],
        "jsx": "react",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "moduleResolution": "Node16"
        }
    }
}
